{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-anthropic-auth"],
  "keybinds": {
    "app_exit": "ctrl+c",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
    "messages_copy": "ctrl+y",
    "input_backspace": "ctrl+h,backspace,shift+backspace",
    "input_delete_to_line_end": "none",
    "editor_open": "ctrl+e",
    "session_list": "ctrl+s",
    "command_list": "ctrl+k"
  }
}
